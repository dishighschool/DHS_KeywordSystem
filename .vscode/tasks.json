{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "flask: run dev server",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-Command",
        "& \"${workspaceFolder}\\.venv\\Scripts\\Activate.ps1\"; flask --app app:create_app --debug run"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
